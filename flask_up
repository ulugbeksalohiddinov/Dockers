- Dockerfile
------------
FROM python:3.8-alpine

WORKDIR /app

COPY /req.txt /app

RUN pip install -r req.txt

COPY . /app

CMD ["python3", "-m" , "flask", "run", "--host=0.0.0.0"]

- docker-compose.yml
--------------------
version: "3.9"
services:
  flaskapp:
    build:
      context: .
      dockerfile: Dockerfile
    networks:
      - api_net
    ports:
      - '5000:5000'
    environment:
      -  AUTHOR= "prod"
    volumes:
      - api_vol:/app
    depends_on:
      - postgres
  postgres:
    image: postgres:latest
    env_file: ./.env
    environment:
      POSTGRES_USER: POSTGRESDB_USER
      POSTGRES_PASSWORD: POSTGRESDB_PASSWORD
    ports:
      - '5432:5432'
    volumes:
      - db_vol:/var/lib/postgresql/data
    networks:
      - db_net

volumes:
  api_vol:
  db_vol:

networks:
  api_net:
    external: true
  db_net:
    external: true

- .env.txt
-----------
POSTGRESDB_USER: postgres
POSTGRESDB_PASSWORD: postgres



--Dockerfile run:
docker run -e AUTHOR=ulugbek -dp 5000:5000 flask-app(container-name) flask(image-name)

-- docker-network.sh
docker network create api_net -d bridge --scope local --subnet 172.22.2.0/24 --attachable
docker network create db_net -d bridge --scope local --subnet 172.22.3.0/24 --attachable


