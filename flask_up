- app.py
---------
from main import app

if __name__ == "__main__":
  app.run()

- main.py
---------
from flask import Flask, request, jsonify
import json, os

AUTHOR = os.environ['AUTHOR']

app=Flask(__name__)


@app.route('/', methods=['GET'])
def get_project():
    res = {
        'env': AUTHOR,
        'app': "Python Flask",
        'method': "GET",
        'status': 200
    }
    return jsonify(res)

- req.txt
----------
click==8.1.7
Flask==2.0.1
importlib-metadata==6.7.0
itsdangerous==2.1.2
